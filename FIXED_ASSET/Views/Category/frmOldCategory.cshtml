                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            int sno = 0;
                        }

                        @foreach (var item in ViewBag.OldCategoryList)
