        $('.addnew').show();
        $('#updateCategory').show();
        $('#submitCategory').hide();

        $.ajax({
            type: "POST",
            url: "/AssetCategory/Edit_Segment_it",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify({
                //  obj: asd
                segId: segId

            }),
            success: function (response) {

                console.log(response);


                $("#segmentId").val(response.data.EXTERNAL_ID);
                $("#segmentName").val(response.data.SEGMENT_NAME);
                $("#subCategoryCode").val(response.data.CODE);
                $("#ClassList").val(response.data.CLASS_ID).trigger('change');
               // $("#CategoryList").val(response.data.CAT_ID);
                $("#CategoryList_edit ").val(response.data.CAT_ID);
